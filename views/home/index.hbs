<style>
  .welcome-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 2rem;
  }
  .welcome-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    padding: 3rem;
    max-width: 600px;
    width: 100%;
    text-align: center;
    animation: fadeInUp 0.6s ease-out;
  }
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .welcome-icon {
    font-size: 4rem;
    color: #667eea;
    margin-bottom: 1.5rem;
    animation: pulse 2s ease-in-out infinite;
  }
  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }
  .welcome-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .welcome-subtitle {
    font-size: 1.2rem;
    color: #6c757d;
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  .welcome-features {
    text-align: left;
    margin: 2rem 0;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 10px;
  }
  .welcome-features h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 1rem;
    text-align: center;
  }
  .feature-item {
    display: flex;
    align-items: center;
    margin-bottom: 0.75rem;
    color: #495057;
  }
  .feature-item i {
    color: #667eea;
    margin-right: 0.75rem;
    font-size: 1.2rem;
  }
  .welcome-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
  .btn-welcome {
    padding: 0.75rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-radius: 50px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
  }
  .btn-primary-welcome {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
  }
  .btn-primary-welcome:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
    color: white;
  }
  .btn-outline-welcome {
    background: white;
    color: #667eea;
    border: 2px solid #667eea;
  }
  .btn-outline-welcome:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(102, 126, 234, 0.2);
  }
  .user-greeting {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1rem;
    border-radius: 10px;
    margin-bottom: 1.5rem;
  }
  .user-greeting h4 {
    margin: 0;
    font-size: 1.3rem;
  }
</style>

<div class="welcome-container">
  <div class="welcome-card">
    {{#if user}}
      <div class="user-greeting">
        <h4>Welcome back, {{user.name}}!</h4>
      </div>
    {{/if}}
    
    <div class="welcome-icon">
      <i class="bi bi-shield-lock-fill"></i>
    </div>
    
    <h1 class="welcome-title">Safe Wallet</h1>
    <p class="welcome-subtitle">
      Your secure, decentralized wallet solution for managing digital assets with confidence.
    </p>
    
    <div class="welcome-features">
      <h3>Key Features</h3>
      <div class="feature-item">
        <i class="bi bi-shield-check"></i>
        <span>Secure multi-signature wallet support</span>
      </div>
      <div class="feature-item">
        <i class="bi bi-key"></i>
        <span>Advanced key management</span>
      </div>
      <div class="feature-item">
        <i class="bi bi-wallet2"></i>
        <span>Multi-chain wallet support</span>
      </div>
      <div class="feature-item">
        <i class="bi bi-graph-up"></i>
        <span>Transaction history & ledger</span>
      </div>
    </div>
    
    <div class="welcome-actions">
      {{#if user}}
        <a href="/dashboard" class="btn btn-primary-welcome btn-welcome">
          <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
        </a>
      {{else}}
        <a href="/auth/register" class="btn btn-primary-welcome btn-welcome">
          <i class="bi bi-person-plus me-2"></i>Get Started
        </a>
        <a href="/auth/login" class="btn btn-outline-welcome btn-welcome">
          <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
        </a>
      {{/if}}
    </div>
    
    <div class="mt-4">
      <small class="text-muted">
        <i class="bi bi-info-circle me-1"></i>
        Cryptographic secure storage with ledger and multi-signature wallet support.
      </small>
    </div>
  </div>
</div>

